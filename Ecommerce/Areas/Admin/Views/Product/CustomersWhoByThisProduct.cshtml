@model IEnumerable<CustomerViewModel>
@{
    ViewData["Title"] = "";
}

@if (Model.Count() > 0)
{
    <div class="d-flex justify-content-between align-items-center">
        <h1>Customer Who Buy @ViewBag.ProductName</h1>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Customer Email</th>
            <th>Customer Password</th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerPhone</td>
                <td>@item.CustomerEmail</td>
                <td>@item.CustomerPassword</td>
            </tr>
        }

    </table>
}
else
{
    <div class="d-flex justify-content-between">
        <div class="text-danger">there is no Customer buy this product</div>
        <a asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Create Product</a>
    </div>
}
