@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}

<div class="wrapper">
    <h2>Registration</h2>
    <form asp-action="Register" method="post">
        <div class="input-box">
            <input asp-for="Fname" type="text" placeholder="Enter your First name" required>
        </div>
        <div class="input-box">
            <input asp-for="Lname" type="text" placeholder="Enter your Last name" required>
        </div>
        <div class="input-box">
            <input asp-for="Email" type="text" placeholder="Enter your email" required>
        </div>
        <div class="input-box">
            <input asp-for="Password" type="password" placeholder="Create password" required>
        </div>
        <div class="input-box">
            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" required>
        </div>
        <div class="policy">
            <input asp-for="isAgree" type="checkbox" >
            <h3>I accept all terms & condition</h3>
        </div>
        <div class="input-box button">
            <input type="Submit" value="Register Now">
        </div>
        <div class="text">
            <h3>Already have an account? <a asp-action="Login">Login now</a></h3>
        </div>
    </form>
</div>
