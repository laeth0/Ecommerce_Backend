@model IEnumerable<UsersViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
@if (Model.Count() > 0)
{
    <div class="d-flex justify-content-between align-items-center">
        <h1>Users List</h1>
        @* <a asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>Create Category</a> *@
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>

                <td>@item.Id</td>
                <td>@item.Fname</td>
                <td>@item.Lname</td>
                <td>@item.Email</td>
                <td>@item.Roles</td>
                
            </tr>
        }

    </table>
}
else
{
    <div class="d-flex justify-content-between">
        <div class="text-danger">there is no Users</div>
        @* <a asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>Create Category</a> *@
    </div>
}
